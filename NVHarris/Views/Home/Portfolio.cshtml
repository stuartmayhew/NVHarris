@model List<NVHarris.Models.Portfolio>

@{
    ViewBag.Title = "Portfolio";
}


<div class="container">
    <h2>Our Portfolio</h2>
    <div><hr /></div>
    @for (int i = 0; i < Model.Count; i++)
    {
        string imgPath = string.Empty;
        if (Model[i].ProjectImage != string.Empty)
        {
            imgPath = Model[i].ProjectImage;
        }
        else
        {
            imgPath = "noImage.png";
        }
        <div class="row">
            <div class="col-sm-4">
                <img src="~/Upload/@imgPath" class="portPicResponsive" />
            </div>
            <div class="col-sm-7 offset-sm-1">
                <h2>@Model[i].ProjectName</h2>
                <a href="@Model[i].ProjectLink" target="_blank"><h4>Link to Website</h4></a>
            </div>
            <div class="row">
                <div class="col-sm-11">
                    <h5>@Model[i].ProjectDesc</h5>
                </div>
            </div>
        </div>
        <div>
            <hr />
        </div>
    }

</div>
