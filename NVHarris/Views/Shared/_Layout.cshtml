<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title NV Harris and Associates</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="col-md-12 bannerClass">
        <img src="~/Images/banner.jpg" class="bannerLogo" />
        <h2 style="color:black">eCommerce Business Solutions</h2>
        <h2 style="color:black">(251)454-3514</h2>
    </div>
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar1">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar1">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active px-5">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item active px-5">@Html.ActionLink("Portfolio", "Portfolio", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item active px-5">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item active px-5">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </nav>
        </div>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p style="font-size:1.5vmin">&copy; @DateTime.Now.Year - NV Harris and Associates</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>